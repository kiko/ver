#!/usr/bin/env ruby

require 'pathname'

file = Pathname(__FILE__)
file = file.readlink if file.symlink?

ver = file.parent.parent + 'lib/ver'
require ver
require 'eventmachine'

EM.epoll

begin
  EM.run do
    CHANNEL = EM::Channel.new

    EM.connect '127.0.0.1', 18014, VER::Client
  end
rescue Interrupt
end
